<h1><center> Create New Painter </center></h1>
<% if @error_2 %>
    <b><%= @error_2 %></b>
<%end %>
<% if @error %>
    <% @error.uniq.each do |e| %>
    <h3> Errors: <%=  e %> </h3>
    <%end %>
<%end %>

<form action='/painter' method="post"> 
    <label> Name </label><br>
        <input type="text" name="name"/><br><br><br>
    <label> Bio </label><br>
        <textarea name="bio" rows="4" cols="50"></textarea><br><br><br>
    <label> Image Url </label><br>
        <input type="text" name="img"/><br><br><br>
    <input type="Submit" value="Submit">
</form>